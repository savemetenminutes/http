{
    "name": "savemetenminutes/http",
    "description": "save me ten minutes - http client based on php-http (php-http.org)",
    "type": "library",
    "keywords": [
        "savemetenminutes",
        "http",
        "client",
        "php-http"
    ],
    "homepage": "https://github.com/savemetenminutes/http",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Milen Kirilov",
            "email": "savemetenminutes@gmail.com"
        }
    ],
    "require": {
        "php": "^7",
        "container-interop/container-interop": "*",
        "php-http/httplug": "^1.1",
        "php-http/client-common": "^1.7",
        "php-http/guzzle6-adapter": "^1.0",
        "php-http/mock-client": "^1.1",
        "php-http/logger-plugin": "^1.0",
        "php-http/message-factory": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Smtm\\Http\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "../../"
    }
}
